{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "nix": {
    "enabled": true
  },
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergePatch",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "OpenCode npm plugins in Nix module (name@version)",
      "managerFilePatterns": ["/^modules\\/ai-tools\\.nix$/"],
      "matchStrings": [
        "\"(?<depName>@[^\"/@\\s]+/[^\"@\\s]+|[^\"@\\s]+)@(?<currentValue>[0-9][0-9A-Za-z.+-]*)\""
      ],
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates with 3-day delay",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Require manual approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "OpenCode plugins",
      "matchManagers": ["custom.regex"],
      "matchFileNames": ["/^modules\\/ai-tools\\.nix$/"],
      "groupName": "opencode plugins"
    },
    {
      "description": "Nix flake inputs",
      "matchManagers": ["nix"],
      "groupName": "nix flake inputs"
    }
  ]
}
